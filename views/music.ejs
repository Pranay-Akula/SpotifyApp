<!DOCTYPE html>
<html>
<head>
  <title>Spotify Album Search</title>
  <link rel="stylesheet" href="/styles.css">
  <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700&display=swap');
    
    body {
      font-family: 'Orbitron', sans-serif;
      background-color: #121212;
      color: white;
      text-align: center;
      padding: 30px;
    }
    h1 {
      margin-bottom: 20px;
    }
    form {
      margin-bottom: 30px;
    }
    input[type="text"] {
      padding: 10px;
      font-size: 1rem;
      width: 300px;
    }
    button {
      padding: 10px 20px;
      font-size: 1rem;
      margin-left: 10px;
      cursor: pointer;
    }
    .albums {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 20px;
      margin-top: 30px;
    }
    .album {
      background-color: #1e1e1e;
      padding: 10px;
      border-radius: 10px;
      width: 200px;
    }
    .album img {
      width: 100%;
      border-radius: 5px;
    }
    .album-title {
      margin-top: 10px;
      font-size: 1rem;
      font-weight: bold;
    }
    .logout-link {
      position: absolute;
      top: 20px;
      right: 20px;
      color: #ccc;
      text-decoration: none;
      font-size: 0.9rem;
    }
    .logout-link:hover {
      color: #fff;
    }
  </style>
</head>
<body>
  <a href="/logout" class="logout-link">Log Out</a>
  <h1>Search for a Song</h1>

  <form method="POST" action="/songs/search">
    <input type="text" name="songQuery" placeholder="Enter song title or artist" required />
    <button type="submit">Search</button>
  </form>

  <% if (albums && albums.length > 0) { %>
    <div class="albums">
      <% albums.forEach(album => { %>
        <div class="album">
          <img src="<%= album.imageUrl %>" alt="<%= album.name %> album cover" />
          <div class="album-title"><%= album.name %></div>
        </div>
      <% }) %>
    </div>
  <% } else if (searched) { %>
    <p>No albums found for your query.</p>
  <% } %>
</body>
</html>

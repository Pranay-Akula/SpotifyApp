<!DOCTYPE html>
<html>
<head>
  <title>Dashboard</title>
  <link href="/style.css" rel="stylesheet">
</head>
<body>
  <h1>Your Songs</h1>
  <form action="/songs/search" method="POST">
    <input type="text" name="songName" placeholder="Search song" required>
    <input type="hidden" name="userId" value="<%= userId %>">
    <button type="submit">Search</button>
  </form>

  <div class="songs">
    <% songs.forEach(song => { %>
      <div class="card">
        <h3><%= song.songName %> by <%= song.artist %></h3>
        <img src="<%= song.albumCoverUrl %>" alt="Album Cover" />
      </div>
    <% }) %>

  </div>

  <form action="/songs/clear" method="POST" style="margin-top:1em;">
    <input type="hidden" name="userId" value="<%= userId %>">
    <button type="submit">Clear All</button>
  </form>

  <form action="/songs/home" method="POST" style="margin-top:1em;">
    <button type="submit">Home</button>
  </form>
</body>
</html>